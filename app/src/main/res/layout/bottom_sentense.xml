        android:text="◎ 有求皆苦，无求乃乐..." />

    <TextView android:id="@+id/bottom_sentense2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="1dp"
        android:text="◎ 有求皆苦，无求乃乐..."/>

