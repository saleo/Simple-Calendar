<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/ll_bcc_buttonbar"
    android:paddingVertical="@dimen/yearly_padding_full">

        <ImageView
            android:id="@+id/iv_bcc_divider1"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:background="@color/divider_grey"
            android:layout_weight="1"
            android:importantForAccessibility="no"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ib_bcc_info"
            android:src="@drawable/ic_info1"
            android:background="@android:color/transparent"
            android:paddingRight="@dimen/big_margin"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ib_bcc_setting"
            android:src="@drawable/ic_settings1"
            android:background="@android:color/transparent"
            android:paddingRight="@dimen/big_margin"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ib_bcc_today"
            android:src="@drawable/ic_today1"
            android:background="@android:color/transparent"
            android:paddingRight="@dimen/big_margin"/>


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ib_bcc_share"
            android:src="@drawable/ic_share1"
            android:background="@android:color/transparent"
            android:paddingRight="@dimen/big_margin"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ib_bcc_recommend"
            android:src="@drawable/ic_recommend1"
            android:background="@android:color/transparent"/>


        <ImageView
            android:id="@+id/iv_bcc_divider2"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="@color/divider_grey"
            android:importantForAccessibility="no"/>

</LinearLayout>
