<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_top_holder">

    <ImageView
        android:id="@+id/img_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/sk2018"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tv_month_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/default_holidays_color"
        android:text="12月"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/img_top"/>

    <TextView
        android:id="@+id/day_monthly_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_month_number"
        android:layout_alignBottom="@id/img_top"
        android:paddingBottom="10dp"
        android:textSize="20dp"
        android:textColor="@color/default_holidays_color"
        android:text="10日" />
    <LinearLayout
        android:id="@+id/ll_progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_top"
        android:gravity="center"
        android:visibility="gone">
        <android.widget.ProgressBar
            android:id="@+id/pgb_download"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@android:style/Widget.ProgressBar.Small"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txt_download_status"
            android:text="@string/downloading_importing"
            android:textColor="@color/default_holidays_color"
            android:textSize="@dimen/normal_text_size"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/yearly_padding_full"/>
    </LinearLayout>
