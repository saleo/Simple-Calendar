<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/calendar_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_intro_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/about_topimage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/sk_banner" />

        <android.support.design.widget.TabLayout
            android:id="@+id/intro_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/about_topimage"
            android:paddingVertical="2sp"
            android:textSize="@dimen/bigger_text_size"
            android:textStyle="bold">

            <android.support.design.widget.TabItem
                android:id="@+id/tab_intro_skcal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_intro_skcal" />

            <android.support.design.widget.TabItem
                android:id="@+id/tab_intro_sk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_intro_sk" />

            <android.support.design.widget.TabItem
                android:id="@+id/tab_intro_donate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_intro_donate" />

            <android.support.design.widget.TabItem
                android:id="@+id/tab_intro_xiangyu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_intro_xiangyu" />

        </android.support.design.widget.TabLayout>

        <com.simplemobiletools.commons.views.MyTextView
            android:id="@+id/txt_about_intro"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical"
            android:textIsSelectable="true"
            android:text="@string/str_intro_xiangyu" />

        <include
            layout="@layout/bottom_contact_copyright"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
